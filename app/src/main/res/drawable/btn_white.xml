<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/btn_radius" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/shadow_overlay" />
                    <corners android:radius="@dimen/btn_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/btn_radius" />
            <padding
                android:bottom="@dimen/btn_padding"
                android:left="@dimen/btn_padding"
                android:right="@dimen/btn_padding"
                android:top="@dimen/btn_padding" />
        </shape>
    </item>

</selector>
